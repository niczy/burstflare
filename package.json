{
  "name": "burstflare",
  "version": "0.1.0",
  "private": true,
  "license": "Apache-2.0",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "node scripts/build.mjs",
    "ci": "npm run lint && npm run build && npm test",
    "cf:generate": "node scripts/cloudflare-generate-wrangler.mjs",
    "cf:generate:production": "CLOUDFLARE_ENVIRONMENT=production node scripts/cloudflare-generate-wrangler.mjs",
    "cf:generate:staging": "CLOUDFLARE_ENVIRONMENT=staging node scripts/cloudflare-generate-wrangler.mjs",
    "cf:migrate": "node scripts/cloudflare-migrate.mjs && node scripts/cloudflare-validate-schema.mjs",
    "cf:migrate:staging": "CLOUDFLARE_ENVIRONMENT=staging node scripts/cloudflare-migrate.mjs && CLOUDFLARE_ENVIRONMENT=staging node scripts/cloudflare-validate-schema.mjs",
    "cf:provision": "node scripts/cloudflare-provision.mjs",
    "cf:provision:staging": "CLOUDFLARE_ENVIRONMENT=staging node scripts/cloudflare-provision.mjs",
    "cf:validate-schema": "node scripts/cloudflare-validate-schema.mjs",
    "cf:validate-schema:staging": "CLOUDFLARE_ENVIRONMENT=staging node scripts/cloudflare-validate-schema.mjs",
    "cf:verify": "node scripts/cloudflare-verify.mjs",
    "cf:verify:staging": "CLOUDFLARE_ENVIRONMENT=staging node scripts/cloudflare-verify.mjs",
    "dev": "node apps/edge/src/dev-server.js",
    "lint": "node scripts/lint.mjs",
    "npm:cli:smoke": "node scripts/npm-cli-smoke.mjs",
    "release:validate": "node scripts/release-validate.mjs",
    "smoke": "node scripts/smoke.mjs",
    "ui:smoke": "node scripts/ui-smoke.mjs",
    "test": "node --test"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@cloudflare/containers": "^0.1.1"
  }
}
